<!-- res/layout/nav_header.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondomenu"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/usuario" />

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"> <!-- Agrega elementos de diseño aquí -->

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nombre:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/navNombre"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"> <!-- Agrega elementos de diseño aquí -->

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Apellido:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/navApellido"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Aoellido"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"> <!-- Agrega elementos de diseño aquí -->

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Rut:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/navRut"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Rut"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="73dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"> <!-- Agrega elementos de diseño aquí -->

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email::"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/navEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>